@model Voleska.Models.Blog

@{
    ViewData["Title"] = "Izbriši";
}

<nav aria-label="breadcrumb" class="">
    <ol class="breadcrumb bg-white d-flex justify-content-center">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="domov" class="customColor">Domov</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Blogi" class="customColor"  asp-route-stevilkaStrani="@ViewBag.StevilkaStrani" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">Blogi</a></li>
        <li class="breadcrumb-item active">Izbriši</li>
    </ol>
</nav>


<h1 class="text-danger text-center">Izbriši</h1>

<h3 class="text-center">Izbrišem blog "@Html.DisplayFor(model => model.Naslov)"?</h3>

<div>
    <hr />
    
            <div class="justify-content-center d-flex my-5">
                <img src="~/thumbnail/@Model.Slika" class="img-thumbnail z-depth-1">
            </div>
       


    <div class="card my-5">
        <div class="card-header bg-default text-white">
            @Html.DisplayNameFor(model => model.Povzetek)
        </div>
        <div class="card-body p-4 text-justify dosis fontSize20">
            
                @Html.DisplayFor(model => model.Povzetek)
            
        </div>
    </div>

    <div class="card my-5">
        <div class="card-header bg-default text-white">
            @Html.DisplayNameFor(model => model.Clanek)
        </div>
        @{

            string besedilo = Model.Clanek;
            string[] clanek = besedilo.Split("<br>");
            int stOdstavka = 1;
        }

        <div class="card-body p-4" id="clanek">
            @foreach (string paragraph in clanek)
            {
                <p class="my-5 text-justify dosis fontSize20" id="@stOdstavka">@paragraph</p>
                stOdstavka++;
            }
        </div>
    </div>

    <div class="card my-5">
        <div class="card-header bg-default text-white">
            Ostale informacije
        </div>
        <div class="card-body p-4 d-flex justify-content-between">

            <div>
                <div class="font-weight-bold mb-2">
                   @Html.DisplayNameFor(model => model.Bloger)
                </div>
                <div>
                    @Html.DisplayFor(model => model.Bloger)
                </div>

            </div>
            

            <div>
                <div class="font-weight-bold mb-2">
                    @Html.DisplayNameFor(model => model.Dodan)
                </div>
                <div>
                    @Model.Dodan.ToString("dd.MM.yyyy")
                </div>

            </div>
           

            <div>
                <div class="font-weight-bold mb-2">
                    @Html.DisplayNameFor(model => model.Posodobljen)
                </div>
                <div>
                    @Model.Posodobljen.ToString("dd.MM.yyyy")
                </div>

            </div>
            
            <div>
                <div>
                    <i class="far fa-thumbs-up mb-2"></i>
                </div>
                <div>
                    @Html.DisplayFor(model => model.SteviloLike)
                </div>
            </div>
            

            <div>
                <div>
                    <i class="far fa-thumbs-down mb-2"></i>
                </div>
                <div>
                    @Html.DisplayFor(model => model.SteviloDislike)
                </div>
            </div>
            


        </div>
    </div>
    <div class="d-flex justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Izbriši" class="btn btn-danger" />

        </form>
    </div>
    <a asp-action="Index" class="d-flex justify-content-center customColor mt-2"  asp-route-stevilkaStrani="@ViewBag.StevilkaStrani" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">Nazaj na seznam</a>

</div>

<script>
    $(document).ready(function () {

        urediClanek();
        $("strong").addClass("font-weight-bold");
        $("blockquote").addClass("blockquote");
        $("#clanek").find('img').addClass("z-depth-2 rounded");

    });

    function urediClanek() {
        var clanek = [];
        $("#clanek > p").each((index, elem) => {
            clanek.push(elem.id);
        });


        for (let i = 1; i <= clanek.length; i++) {
            var vrednost = $("#" + i).text();
            $("#" + i).html(vrednost);
        }
    };
</script>