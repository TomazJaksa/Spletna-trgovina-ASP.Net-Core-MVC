@model Voleska.ViewModel.BlogEditViewModel

@{
    ViewData["Title"] = "Uredi";
}
@*
    Trumbowig rich text editor stil

    <link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.css" rel="stylesheet" />
*@

<nav aria-label="breadcrumb" class="">
    <ol class="breadcrumb bg-white d-flex justify-content-center">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="domov" class="customColor">Domov</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Blogi" class="customColor"  asp-route-stevilkaStrani="@ViewBag.StevilkaStrani" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">Blogi</a></li>
        <li class="breadcrumb-item active">Uredi</li>
    </ol>
</nav>

<h1 class="text-center mb-2">Uredi blog</h1>

<hr />
<div class="row">

    <form asp-action="Edit" enctype="multipart/form-data" class="col-12 d-flex flex-column flex-md-row needs-validation" novalidate>
        <div class="col-md-6 d-flex flex-column align-items-center justify-content-start">
            <div class="form-group md-form md-outline mt-4 mb-5 w-100">
                <label asp-for="Naslov" class="control-label"></label>

                <input asp-for="Naslov" class="form-control z-depth-1 p-2 pl-3" required />


                <div class="valid-tooltip">
                    Izgleda okej!
                </div>
                <div class="invalid-tooltip">
                    <span id="errorMessage">Ime je obvezno!</span>
                </div>
            </div>

            <div id="prikazSlike">
                <img id="output" src="~/slike/@Model.ObstojecaSlika" asp-append-version="true" height="400" class="z-depth-1 img-thumbnail" />
            </div>
            <div class="form-group mt-3 mb-0">
                <label for="slika" class="btn-sm btn-outline-info control-label mb-0">Spremeni sliko</label>
                <input type="file" accept="image/*" onchange="loadFile(event)" asp-for="Slika" id="slika" class="form-control" style="display:none" />
                <span asp-validation-for="Slika" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6">





            <div class="md-form md-outline form-group shadow-textarea mb-5">

                <textarea asp-for="Povzetek" class="md-textarea form-control p-3 z-depth-1 setScrollbar scrollbar-cyan thin" rows="4" required></textarea>
                <label asp-for="Povzetek" class="control-label mt-2">Povzetek bloga</label>
                <div class="valid-tooltip">
                    Izgleda okej!
                </div>
                <div class="invalid-tooltip">
                    Povzetek je obvezen!
                </div>
            </div>

            <div class="md-form md-outline form-group shadow-textarea mb-5">

                <textarea id="editor" asp-for="Clanek" class="no-display form-control p-3 z-depth-1 setScrollbar scrollbar-cyan thin" rows="4" required></textarea>
                @*<label asp-for="Clanek" class="control-label mt-2">Celoten Članek</label>*@
                <div class="valid-tooltip">
                    Izgleda okej!
                </div>
                <div class="invalid-tooltip">
                    Članek je obvezen!
                </div>

            </div>


            <input type="hidden" asp-for="ID" />
            <div class="form-group d-flex align-items-center">
                <input type="submit" value="Shrani spremembe" class="btn btn-primary" />&nbsp;
                <div>
                    <a asp-action="Index" class="customColor"  asp-route-stevilkaStrani="@ViewBag.StevilkaStrani" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">Nazaj na seznam</a>
                </div>
            </div>
        </div>

    </form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @*
        <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
        <script src="~/lib/ckeditor5-build-classic/ckeditor.js"></script>
    *@
    <script src="https://cdn.tiny.cloud/1/gt0hx2ueheviefljcali3wxukz5ipcad6k7qkru5pu9r4a92/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>


        $(document).ready(function () {

            /*
            $("#editor").trumbowyg();
            $(".trumbowyg-editor").addClass("setScrollbar scrollbar-cyan thin");


            ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                    console.error(error);
                });
            */

            tinymce.init({
                selector: '#editor',
                height: "350",
                skin: 'material-classic',
                content_css: 'material-classic',
                icons: 'material',
                plugins: 'code image imagetools link lists wordcount',
                toolbar: 'undo redo | styleselect | bold italic underline forecolor backcolor | link image code | align | bullist numlist | wordcount',

            });



            $('input[type="file"]').change(function () {
                $('#prikazSlike').removeClass("animated fadeIn");

                readURL(this);
            });



        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#output').attr('src', e.target.result);

                    $('#prikazSlike').addClass("animated fadeIn");

                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {

                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

    </script>
}
