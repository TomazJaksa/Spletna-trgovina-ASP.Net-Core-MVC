@model PaginatedList<Voleska.Models.Izdelek>



@{
    ViewData["Title"] = "Izdelki";
}

<nav aria-label="breadcrumb" class="ml-md-5">
    <ol class="breadcrumb bg-white d-flex justify-content-center">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="domov" class="customColor">Domov</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Katalog" asp-action="Index" class="customColor">Katalog</a></li>
        <li class="breadcrumb-item active">@ViewBag.TipIzdelka</li>
    </ol>
</nav>
<h1 class="text-center">@ViewBag.TipIzdelka</h1>

<div class="row row-no-gutters d-flex justify-content-around px-md-4">
    <div class="col-md-6 pl-md-5 mx-sm-auto">
        <form asp-controller="Katalog" asp-action="Izdelki" method="get">
            <div class="input-group md-form form-sm form-2 pl-0 d-flex justify-content-center justify-content-md-start">
                <input class="py-2 col-6" type="text" id="vnesi" name="searchString" placeholder="Vnesite ime izdelka..." value="@ViewBag.SearchString">
                <input type="hidden" name="imeTipaIzdelka" value="@ViewBag.TipIzdelka" />
                <input type="hidden" name="filtriranje" value="@ViewBag.Filtriranje" />
                <div class="input-group-append ml-4">
                    <button type="submit" class="btn-outline-unique2 btn px-2 mx-0">
                        <span class="mr-1">Iskanje </span>  <i class="fa fa-search fa-lg" aria-hidden="true"></i>
                    </button>
                </div>

                @if (@ViewBag.SearchString != null)
                {
                    <a asp-action="Izdelki" asp-controller="Katalog" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka">Nazaj na prikaz vseh izdelkov</a>
                }
            </div>
        </form>
    </div>

    <div class="pr-md-5 col-md-6 d-flex align-items-center justify-content-end ">
        <!-- Split button -->
        <div class="btn-group orderBy">
            <a type="button" class="btn btn-outline-unique2" asp-action="Izdelki" asp-controller="Katalog" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka">
                @if (ViewBag.IzbranFilter == null)
                {
                    <span>Razvrščanje</span>
                }
                else
                {
                    <span>@ViewBag.IzbranFilter</span>
                }
            </a>
            <button type="button" class="btn btn-outline-unique2 dropdown-toggle px-3" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <div class="dropdown-menu poravnaj z-depth-5 p-2">
                <a class="dropdown-item dropDownCustom hoverable waves-effect waves-light py-2" asp-action="Izdelki" asp-controller="Katalog" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka" asp-route-searchString="@ViewBag.SearchString">Privzeto</a>
                <a class="dropdown-item dropDownCustom hoverable waves-effect waves-light py-2" asp-action="Izdelki" asp-controller="Katalog" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="cenaNarascajoce">Cena (najnižja do najvišja)</a>
                <a class="dropdown-item dropDownCustom hoverable waves-effect waves-light py-2" asp-action="Izdelki" asp-controller="Katalog" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="cenaPadajoce">Cena (najvišja do najnižja)</a>
                <a class="dropdown-item dropDownCustom hoverable waves-effect waves-light py-2" asp-action="Izdelki" asp-controller="Katalog" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="datumPadajoce">Najnovejši</a>
                <a class="dropdown-item dropDownCustom hoverable waves-effect waves-light py-2" asp-action="Izdelki" asp-controller="Katalog" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="ocena">Po oceni</a>
                <a class="dropdown-item dropDownCustom hoverable waves-effect waves-light py-2" asp-action="Izdelki" asp-controller="Katalog" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="priljubljenost">Po priljubljenosti</a>
            </div>
        </div>
    </div>
</div>






@{
    var izdelek = 1;
    <div class="row d-flex justify-content-left">



        @foreach (var item in Model)
        {
            if (item.Izbrisan == false)
            {
                var stevec = 0;

                var aktiven = "";
                <div class="col-md-6 col-lg-4 px-md-5 d-flex align-items-stretch justify-content-center my-5">
                    <!-- Card -->
                    <div class="card customCard">

                        <!-- Card image -->
                        <!--Carousel Wrapper-->
                        <div id="carousel-example-@izdelek" class="carousel slide carousel-fade" data-ride="carousel">

                            <!--Slides-->
                            <div class="carousel-inner" role="listbox">
                                @foreach (var itemOpcija in item.Opcije)
                                {
                                    aktiven = "";
                                    @*<img src="~/thumbnail/@itemOpcija.Slika" class="img-fluid" asp-append-version="true" />*@


                                    if (stevec == 0)
                                    {
                                        aktiven = "active";
                                        stevec += 1;
                                    }
                                    else
                                    {
                                        stevec += 1;
                                    }

                                    <div class="carousel-item @aktiven">
                                        <div class="view">
                                            <img class="d-block w-100" src="~/katalogSlike/@itemOpcija.Slika"
                                                 alt="First slide">
                                            <div class="mask rgba-black-slight"></div>
                                        </div>
                                        <div class="carousel-caption">
                                            <h3 class="h3-responsive">@itemOpcija.Ime</h3>

                                        </div>
                                    </div>

                                }
                            </div>
                            <!--/.Slides-->
                            <!--Indicators-->
                            <ol class="carousel-indicators">
                                @for (var i = 0; i < stevec; i++)
                                {
                                    if (i == 0)
                                    {
                                        <li data-target="#carousel-example-@izdelek" data-slide-to="@i" class="active"></li>
                                    }
                                    else
                                    {
                                        <li data-target="#carousel-example-@izdelek" data-slide-to="@i"></li>
                                    }
                                }
                            </ol>
                            <!--/.Indicators-->
                            <!--Controls-->
                            <a class="carousel-control-prev" href="#carousel-example-@izdelek" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-example-@izdelek" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                            <!--/.Controls-->
                        </div>
                        <!--/.Carousel Wrapper-->
                        <!-- Card content -->
                        <div class="card-body d-flex flex-column justify-content-center text-center">

                            <!-- Title -->
                            <h4 class="card-title">
                                @Html.DisplayFor(modelItem => item.Ime)

                            </h4>
                            <div>
                                @for (int i = 0; i < item.PovprecnaOcena; i++)
                                {
                                    <span><i class="fa fa-star text-warning" aria-hidden="true"></i></span>
                                }
                            </div>

                            <!-- Text -->
                            <p class="card-text">
                                @Html.DisplayFor(modelItem => item.Opis)
                            </p>
                            <p class="card-text">
                                <strong>@Html.DisplayFor(modelItem => item.Cena)</strong>
                            </p>
                            <!-- Button -->
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn customGreenBg" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka" asp-route-stevilkaStrani="@Model.PageIndex" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">Poglej</a>

                        </div>

                    </div>
                    <!-- Card -->
                </div>

                izdelek++;
            }




        }
    </div>
}
@{

    var prejsnjaStran = 1;


    if (ViewBag.StevilkaStrani != null)
    {
        prejsnjaStran = ViewBag.StevilkaStrani - 1;
    }
    var naslednjaStran = ViewBag.StevilkaStrani + 1;

    if (ViewBag.StevilkaStrani == null)
    {
        naslednjaStran = 2;
    }

    var izklopi = "";

    <nav aria-label="Page navigation example mx-5">
        <ul class="pagination pg-teal ml-3 ml-md-5">
            @if (!@Model.HasPreviousPage)
            {
                izklopi = "text-muted izklopi";
            }
            <li class="page-item">
                <a class="page-link @izklopi" asp-route-stevilkaStrani="@prejsnjaStran" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">Nazaj</a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                if (i == @Model.PageIndex)
                {
                    <li class="page-item active">
                        <a class="page-link" asp-route-kliknjenLinkStrani="@i" asp-route-stevilkaStrani="@i" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">@i <span class="sr-only">(current)</span></a>
                    </li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-route-kliknjenLinkStrani="@i" asp-route-stevilkaStrani="@i" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">@i</a></li>
                }



            }

            @if (@Model.HasNextPage)
            {
                izklopi = "";
            }
            else
            {
                izklopi = "text-muted izklopi";
            }
            <li class="page-item ">
                <a class="page-link @izklopi" asp-route-imeTipaIzdelka="@ViewBag.TipIzdelka"  asp-route-stevilkaStrani="@naslednjaStran" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">Naprej</a>
            </li>
        </ul>
    </nav>

}
