                                    Urejanje
                                </a>
                                <div class="dropdown-menu dropdown-default p-2 z-depth-5" aria-labelledby="urejanje">
                                    <a id="UrejanjeIzdelkov" class="dropdown-item dropDownCustom hoverable" asp-area="" asp-controller="Izdelki" asp-action="Index">Urejanje izdelkov</a>
                                    <a id="Uporabniki" class="dropdown-item dropDownCustom hoverable" asp-area="" asp-controller="Uporabniki" asp-action="Index">Uporabniki</a>
                                    <a id="Transakcije" class="dropdown-item dropDownCustom hoverable" asp-area="" asp-controller="Transakcije" asp-action="Index">Transakcije</a>
                                </div>
                            </li>

                        }



                        <li class="nav-item socialIcon">
                            <a class="nav-link fb" href="https://www.facebook.com/voleskaccessories/" target="_blank" data-toggle="tooltip" data-placement="bottom" title='Facebook'><i class="fab fa-facebook-f light-green-text-2"></i></a>
                        </li>
                        <li class="nav-item socialIcon">
                            <a class="nav-link insta" href="https://www.instagram.com/voleskaccessories/" target="_blank" data-toggle="tooltip" data-placement="bottom" title='Instagram'><i class="fab fa-instagram light-green-text-2"></i></a>
                        </li>

                        <partial name="_LoginPartial.cshtml" />
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li id="kosarica" class="nav-item">

                                @await Component.InvokeAsync("SteviloIzdelkovVKosarici")

                            </li>
                        }

                    </ul>



                </div>

            </nav>

