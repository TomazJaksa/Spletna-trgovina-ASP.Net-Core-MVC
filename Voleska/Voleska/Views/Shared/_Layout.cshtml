                                <a id="contact" class="nav-link" href="#kontakt">Kontakt</a>
                            </li>


                        }
                        else
                        {
                            <li class="nav-item">
                                <a id="naslovnaStran" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="domov">Domov</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="oMeni">O meni</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="kontakt">Kontakt</a>
                            </li>
                        }



                        <li id="Blogi" class="nav-item ">
                            <a class="nav-link" asp-area="" asp-controller="Blogi" asp-action="Index">Blog</a>
                        </li>

                        <li id="Katalog" class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Katalog" asp-action="Index">Katalog izdelkov</a>
                        </li>

                    </ul>

                    <ul class="nav-pills navbar-nav nav-flex-icons ml-auto py-1 justify-content-between">
