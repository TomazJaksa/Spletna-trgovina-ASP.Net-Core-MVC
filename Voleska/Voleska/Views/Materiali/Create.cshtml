@model Voleska.Models.Material

@{
    ViewData["Title"] = "Ustvari";
}

<nav aria-label="breadcrumb" class="">
    <ol class="breadcrumb bg-white d-flex justify-content-center">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="domov" class="customColor">Domov</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Katalog" asp-action="Index" class="customColor">Katalog</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Materiali" class="customColor">Materiali</a></li>
        <li class="breadcrumb-item active">Ustvari</li>
    </ol>
</nav>
<h1 class="text-center mb-4">Ustvari material</h1>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate id="registracijaObrazec">

            <div class="form-group md-form md-outline">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control z-depth-1 p-2 pl-3" required />

                <div class="valid-tooltip">
                    Izgleda okej!
                </div>
                <div class="invalid-tooltip">
                    <span id="errorMessage">Ime je obvezno!</span>
                </div>
            </div>

            <div class="md-form md-outline form-group shadow-textarea">

                <textarea asp-for="Opis" class="md-textarea form-control p-3 z-depth-1" rows="3" required></textarea>
                <label asp-for="Opis" class="control-label mt-2">Opis materiala</label>
                <div class="valid-tooltip">
                    Izgleda okej!
                </div>
                <div class="invalid-tooltip">
                    Opis je obvezen!
                </div>
            </div>


            <div class="form-group d-flex justify-content-center mt-5 mb-4">
                <input type="submit" value="Ustvari" class="btn btn-cyan" />
            </div>
        </form>
    </div>

</div>

<div class="text-center">
    <a asp-action="Index" class="customColor">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>


            $(document).ready(function () {


                $("#registracijaObrazec").find('input:visible:first').on('change keyup paste', function (event) {
                        validirajAjax(event);
                });

            });


            function validirajAjax(vrednostInput) {
                var vrednost = vrednostInput.target.value;
                var tip = $("#trenutniMaterial").val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("PreveriIme", "Materiali")',
                    data: { ime: vrednost, tip: tip },
                    success: function (data) {


                        if (data) {


                            $('#errorMessage').text("Ime že obstaja!");
                            $("#registracijaObrazec").find('input:visible:first').removeClass("valid");
                            $("#registracijaObrazec").find('input:visible:first').addClass("input-validation-error");
                            vrednostInput.target.setCustomValidity('Ime že obstaja!');
                        } else {

                            $('#errorMessage').text("Ime je obvezno!");

                            vrednostInput.target.setCustomValidity('');
                        }

                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            }



            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    var forms = document.getElementsByClassName('needs-validation');
                    // Loop over them and prevent submission
                    var validation = Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {

                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();

    </script>
}
