@model IEnumerable<Voleska.Models.TipIzdelka>

@{
    ViewData["Title"] = "Tipi izdelkov";
}

<nav aria-label="breadcrumb" class="">
    <ol class="breadcrumb bg-white d-flex justify-content-center">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="domov" class="customColor">Domov</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Katalog" asp-action="Index" class="customColor">Katalog</a></li>
        <li class="breadcrumb-item active">Tipi izdelkov</li>
    </ol>
</nav>
<h1 class="text-center mb-3">Tipi izdelkov</h1>

<p>
    <a asp-action="Create" class="customColor"><i class="far fa-plus-square fa-lf mr-2"></i>Ustvari nov tip izdelka</a>
</p>
@{
    var stevec = 1;
    var animacija = "";
}
<div class="row">
    @foreach (var item in Model)
    {
        @if (stevec % 2 == 0)
        {
            animacija = "animated fadeInRight";
        }
        else {
            animacija = "animated fadeInLeft";
        }
    <div class="col-12 my-3 @animacija fast">
        <!-- Card
    <div class="card card-image" style="background: url(/katalogSlike/@item.Slika) no-repeat;">
    -->
        <div class="card bg-light">
            <div class="card-body d-flex align-items-center">
                <h5 class="card-title align-self-center p-0 mb-0">@Html.DisplayFor(modelItem => item.Ime)</h5>
                <div class="ml-auto">
                    <a asp-action="Edit" asp-route-id="@item.ID" class="card-link customColor">Uredi</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="card-link customColor">Podrobnosti</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="card-link customColor">Izbriši</a>
                </div>
                
            </div>
        </div>

    </div>

        stevec += 1;



    }
</div>

