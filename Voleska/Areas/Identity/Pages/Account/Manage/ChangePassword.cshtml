@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Spremeni geslo";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group md-form md-outline">
                <label asp-for="Input.OldPassword">Staro geslo</label>
                <input asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger animated fadeInLeft"></span>
            </div>
            <div class="form-group md-form md-outline">
                <label asp-for="Input.NewPassword">Novo geslo</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger animated fadeInLeft"></span>
            </div>
            <div class="form-group md-form md-outline">
                <label asp-for="Input.ConfirmPassword">Potrditev novega gesla</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger animated fadeInLeft"></span>
            </div>
            <button type="submit" class="btn btn-primary">Posodobi geslo</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}