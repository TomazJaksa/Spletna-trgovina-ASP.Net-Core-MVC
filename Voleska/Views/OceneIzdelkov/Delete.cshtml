@model Voleska.Models.OcenaIzdelka

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ocena izdelka  @Html.DisplayFor(model => model.Izdelek.Ime)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ocena)
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.Ocena; i++)
            {
                <span><i class="fa fa-star text-warning" aria-hidden="true"></i></span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Komentar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Komentar)
        </dd>
        
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" value="@Model.IzdelekID" name="izdelekId" id="izdelekId"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Katalog" asp-route-id="@Model.IzdelekID" asp-route-naKomentarje="true">Back to List</a>
    </form>
</div>
