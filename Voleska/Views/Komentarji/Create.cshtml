@model Voleska.Models.Komentar

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Komentar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vsebina" class="control-label"></label>
                <input asp-for="Vsebina" class="form-control" />
                <span asp-validation-for="Vsebina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SteviloLike" class="control-label"></label>
                <input asp-for="SteviloLike" class="form-control" value=0 />
                <span asp-validation-for="SteviloLike" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SteviloDislike" class="control-label"></label>
                <input asp-for="SteviloDislike" class="form-control" />
                <span asp-validation-for="SteviloDislike" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Dodan" class="control-label"></label>
                <input asp-for="Dodan" class="form-control" />
                <span asp-validation-for="Dodan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posodobljen" class="control-label"></label>
                <input asp-for="Posodobljen" class="form-control" />
                <span asp-validation-for="Posodobljen" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <span style="color: red;">!!!!Tukaj želimo vezati novo Komentar na ID uporabnika!!!!</span>

                <label asp-for="ApplicationUserID" class="control-label"></label>
                <select asp-for="ApplicationUserID" class="form-control" asp-items="ViewBag.ApplicationUserID"></select>
            </div>
            <div class="form-group">

                <span style="color: red;">!!!!Tukaj želimo vezati novo Opcijo na ID bloga!!!!</span>

                <label asp-for="BlogID" class="control-label"></label>
                <select asp-for="BlogID" class="form-control" asp-items="ViewBag.BlogID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
