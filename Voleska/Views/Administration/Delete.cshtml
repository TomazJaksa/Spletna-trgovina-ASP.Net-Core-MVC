@model Voleska.Areas.Identity.Data.ApplicationRole

@{
    ViewData["Title"] = "Izbriši";
}

<nav aria-label="breadcrumb" class="">
    <ol class="breadcrumb bg-white d-flex justify-content-center">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="domov" class="customColor">Domov</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Uporabniki" asp-action="Index" class="customColor">Uporabniki</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Administration" asp-action="Index" class="customColor">Vloge</a></li>
        <li class="breadcrumb-item active">Izbriši</li>
    </ol>
</nav>

<h1 class="text-danger text-center">Izbriši</h1>

<h3 class="text-center">izbrišem vlogo "@Model.Name"?</h3>
<div class="text-center">
    <hr />
    <div class="mt-5 table-responsive text-nowrap mb-4 z-depth-1 rounded">

        <table class="table table-striped table-hover m-0">
            <thead class="black text-white">
                <tr>
                    <th>
                        @Html.DisplayName("Ime vloge")
                    </th>
                    <th>
                        @Html.DisplayName("Normalizirana oblika")
                    </th>
                    <th>
                        @Html.DisplayName("ID")
                    </th>

                </tr>
            </thead>
            <tbody>




                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.NormalizedName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Id)
                    </td>

                </tr>





            </tbody>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Izbriši" class="btn btn-danger" />
        <a asp-action="Index" class="ml-2 customColor">Nazaj</a>
    </form>
</div>
