@model Voleska.ViewModel.CreateRoleViewModel

@{
    ViewData["Title"] = "Nova vloga";
}

<h1>Ustvari novo vlogo</h1>
<div class="row">
    <div class="col-md-10">
        <section>
            <form method="post">
                
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName">Ime vloge</label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Ustvari vlogo!</button>
                </div>
               
            </form>
        </section>
    </div>
  
</div>

<a class="nav-link" asp-area="" asp-controller="Administration" asp-action="Index">Nazaj</a>
