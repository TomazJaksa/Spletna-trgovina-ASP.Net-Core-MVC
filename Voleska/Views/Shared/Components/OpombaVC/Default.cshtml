@model Voleska.ViewModel.OpombaAjaxViewModel

<div class="col-12 mt-5 mt-md-3 px-0" id="vsebina-@Model.NarociloID">
    <div class="card bg-warning mb-3">
        <div class="card-header text-white black d-flex justify-content-between align-items-center">
            <span>Opombe za izdelek &nbsp; '@Model.ImeIzdelka'</span>
            @if (ViewBag.Blagajna != true)
            {
                <div>
                    <span data-toggle="modal" data-target="#exampleModalCenter">
                        <span class="no-display" id="podajOpombo-@Model.NarociloID">@Model.Opomba</span>
                        <button type="button" class="btn-sm btn-outline-white" onclick="prenesiPodatke(@Model.NarociloID, '@Model.ImeIzdelka', document.getElementById('podajOpombo-@Model.NarociloID').innerHTML)">
                            <i class="fas fa-pencil-alt prefix text-warning"></i>
                        </button>
                    </span>

                    <button type="button" class="btn-sm btn-outline-white" onclick="odstraniOpombo(@Model.NarociloID)">
                        <i class="fa fa-trash text-warning"></i>
                    </button>
                </div>
            }
        </div>
            
        <div class="card-body">

            <p class="text-black" id="dodanaOpomba-@Model.NarociloID">@Model.Opomba</p>
        </div>
    </div>
</div>

