@model Voleska.Models.Izdelek

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Izdelek</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Podrobnosti)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Podrobnosti)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cena)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Izbrisan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Izbrisan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dodan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dodan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Posodobljen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posodobljen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Material)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipIzdelka)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipIzdelka.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opcije)
        </dt>
        <dd class="col-sm-10">
            <table class="table" id="opcije">
                <tr>
                    <th>Barva</th>
                    <th>Slika</th>
                    <th>Zaloga</th>
                </tr>
                @foreach (var item in Model.Opcije)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ime)
                        </td>
                        <td>
                            <img src="~/thumbnail/@item.Slika" class="img-fluid" asp-append-version="true"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zaloga)
                        </td>
                        <td>
                            <a class="nav-link" asp-area="" asp-controller="Opcije" asp-action="Edit" asp-route-id="@item.ID" asp-route-izdelekId="@Model.ID">Uredi</a>
                            <a class="nav-link" asp-area="" asp-controller="Opcije" asp-action="Delete" asp-route-id="@item.ID">Izbriši</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <a class="nav-link" asp-area="" asp-controller="Opcije" asp-action="Create" asp-route-izdelekId="@Model.ID" >Dodajanje nove opcije</a>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
