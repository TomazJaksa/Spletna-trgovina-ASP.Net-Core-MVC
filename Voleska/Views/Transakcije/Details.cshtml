@model Voleska.Models.Transakcija

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Transakcija</h4>
    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            Naročnik:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.UserName)<span>(@Model.ApplicationUser.Ime  @Model.ApplicationUser.Priimek)</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Naslov)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Naslov.Ulica) @Html.DisplayFor(model => model.ApplicationUser.Naslov.HisnaStevilka),
            @Model.ApplicationUser.Naslov.Posta.PostnaStevilka , @Model.ApplicationUser.Naslov.Posta.Kraj
        </dd>
        <dt class="col-sm-2">
            Datum naročila:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dodan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Narocila)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Narocila)
            {
                <div class="border my-3 row">
                    <div class="col-md-4 p-5">
                        <p>Ime izdelka: @item.Izdelek.Ime</p>
                        <p>Opcija: @item.Opcija.Ime</p>
                        <p>Material: @item.Izdelek.Material.Ime</p>
                        <p>Količina: @item.Kolicina</p>
                    </div>
                    <div class="col-md-4">
                        <img id="imageToSwap" src="~/slike/@item.Opcija.Slika" class="img-fluid"  width="300" asp-append-version="true" />
                    </div>
                    
                </div>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SkupniZnesek)
        </dt>
        <dd class="col-sm-10">
            <h3>@Html.DisplayFor(model => model.SkupniZnesek) €</h3>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
