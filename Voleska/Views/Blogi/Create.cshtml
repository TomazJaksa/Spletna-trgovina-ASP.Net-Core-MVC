@model Voleska.ViewModel.BlogViewModel

@{
    ViewData["Title"] = "Ustvari";
}
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.css" rel="stylesheet" />

<nav aria-label="breadcrumb" class="">
    <ol class="breadcrumb bg-white d-flex justify-content-center">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-izbira="domov" class="customColor">Domov</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Blogi" class="customColor" asp-route-stevilkaStrani="@ViewBag.StevilkaStrani" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">Blogi</a></li>
        <li class="breadcrumb-item active">Ustvari</li>
    </ol>
</nav>


<h1 class="text-center mb-4">Ustvari blog</h1>
<hr />
<div class="row">

    <form asp-action="Create" enctype="multipart/form-data" class="col-12 d-flex flex-column flex-md-row needs-validation" novalidate>
        <div class="col-md-6">
            <div class="form-group md-form md-outline mb-5">
                <label asp-for="Naslov" class="control-label"></label>

                <input asp-for="Naslov" class="form-control z-depth-1 p-2 pl-3" required />


                <div class="valid-tooltip">
                    Izgleda okej!
                </div>
                <div class="invalid-tooltip">
                    <span id="errorMessage">Naslov je obvezen!</span>
                </div>
            </div>
            <div class="md-form md-outline form-group shadow-textarea mb-5">

                <textarea asp-for="Povzetek" class="md-textarea form-control p-3 z-depth-1 setScrollbar scrollbar-cyan thin" rows="4" required></textarea>
                <label asp-for="Povzetek" class="control-label mt-2">Povzetek bloga</label>
                <div class="valid-tooltip">
                    Izgleda okej!
                </div>
                <div class="invalid-tooltip">
                    Povzetek je obvezen!
                </div>
            </div>


            <div class="no-display" id="prikazSlike">
                <img id="output" src="~/katalogSlike/" asp-append-version="true" class="z-depth-1 img-thumbnail d-flex justify-content-center" width="290" />
            </div>
            <div class="input-group z-depth-1 mt-4">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="slika">Naloži</span>
                </div>
                <div class="custom-file ">
                    <input type="file" class="custom-file-input" id="slika"
                           aria-describedby="slika" asp-for="Slika" required>
                    <label class="custom-file-label" asp-for="Slika">Izberite datoteko...</label>
                </div>
                <div class="valid-tooltip">
                    Izgleda okej!
                </div>
                <div class="invalid-tooltip">
                    Slika je obvezna!
                </div>
            </div>


        </div>

        <div class="col-md-6">
            <div class="md-form md-outline form-group shadow-textarea mb-5">

                <textarea asp-for="Clanek" id="editor" class="no-display md-textarea form-control p-3 z-depth-1 setScrollbar scrollbar-cyan thin" rows="4" required placeholder="Članek..."></textarea>
                @*<label asp-for="Clanek" class="control-label mt-2">Celoten Članek</label>*@
                <div class="valid-tooltip">
                    Izgleda okej!
                </div>
                <div class="invalid-tooltip">
                    Članek je obvezen!
                </div>
            </div>



            <input type="hidden" asp-for="Bloger" value="Urška Colarič" />


            <div class="form-group d-flex align-items-center mt-3 justify-content-center justify-content-md-end">
                <div>
                    <a asp-action="Index" class="customColor" asp-route-stevilkaStrani="@ViewBag.StevilkaStrani" asp-route-searchString="@ViewBag.SearchString" asp-route-filtriranje="@ViewBag.Filtriranje">Nazaj na seznam</a>&nbsp;
                </div>
                <input type="submit" value="Ustvari" class="btn btn-primary mr-0" />

            </div>
        </div>

    </form>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @*
        <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
    *@
    <script src="https://cdn.tiny.cloud/1/gt0hx2ueheviefljcali3wxukz5ipcad6k7qkru5pu9r4a92/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

    <script>


        $(document).ready(function () {

            /*
            $(".editor").trumbowyg();

            $(".trumbowyg-editor").addClass("setScrollbar scrollbar-cyan thin");
            */
          

            tinymce.init({
                selector: '#editor',
                height: "350",
                skin: 'material-classic',
                content_css: 'material-classic',
                icons: 'material',
                plugins: 'code image link lists wordcount',
                toolbar: 'undo redo | styleselect | bold italic underline forecolor backcolor | link image code | align | bullist numlist | wordcount',

            });

           

            $('input[type="file"]').change(function () {
                $('#prikazSlike').removeClass("animated fadeIn");
                $('#prikazSlike').addClass("d-flex justify-content-center mb-5 mt-4");
                readURL(this);
            });


            $('input[type="text"]').on('change keyup paste', function (event) {
                validirajAjax(event);
            });
        });




        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#output').attr('src', e.target.result);
                    $('#prikazSlike').removeClass("animated fadeOut");
                    $('#prikazSlike').addClass("animated fadeIn");
                    $('#prikazSlike').removeClass("no-display");
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }


        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {

                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

    </script>
}
